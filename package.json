{
  "name": "lightweightproject",
  "version": "1.0.0",
  "description": "This is a lightweight NodeJS project for training, learning and practicing.",
  "author": "https://github.com/MarkDanilchenko/LightweightProject",
  "private": true,
  "license": "UNLICENSED",
  "type": "commonjs",
  "scripts": {
    "build:server": "cd server && nest build && tsc-alias",
    "start:server": "cd server && nest start",
    "start:server:dev": "cd server && nest start --watch",
    "start:server:debug": "cd server && nest start --debug --watch",
    "start:server:prod": "cd server && node dist/src/main",
    "start:microservice:rmq": "cd server && ts-node -r tsconfig-paths/register src/microservice.rmq.ts",
    "start:microservice:rmq:dev": "cd server && nodemon --watch 'src/**/*.ts' --exec ts-node -r tsconfig-paths/register src/microservice.rmq.ts",
    "start:microservice:rmq:prod": "cd server && node dist/src/microservice.rmq.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:create": "npm run typeorm migration:create",
    "typeorm:run": "npm run typeorm migration:run -- -d ./server/src/configs/typeorm.configuration.ts",
    "typeorm:revert": "npm run typeorm migration:revert -- -d ./server/src/configs/typeorm.configuration.ts",
    "typeorm:generate": "npm run typeorm migration:generate -- -d ./server/src/configs/typeorm.configuration.ts",
    "typeorm:check": "npm run typeorm migration:generate -- -d ./server/src/configs/typeorm.configuration.ts ./server/migrations/check",
    "typeorm:show": "npm run typeorm migration:show -- -d ./server/src/configs/typeorm.configuration.ts",
    "format:server": "prettier --write ./server/src/**/*.ts server/tests/**/*.ts ./server/migrations/**/*.ts && eslint ./server/src/**/*.ts server/tests/**/*.ts ./server/migrations/**/*.ts --fix",
    "clear:server:data": "rm -rf ./server/dist",
    "test:unit": "NODE_ENV=test jest",
    "test:e2e": "NODE_ENV=test jest --config server/tests/jest-e2e.json",
    "test:unit:cov": "NODE_ENV=test jest --coverage",
    "test:e2e:cov": "NODE_ENV=test jest --config server/tests/jest-e2e.json --coverage",
    "test:clear": "rm -rf ./server/coverage"
  },
  "dependencies": {
    "@anatine/zod-nestjs": "^2.0.12",
    "@anatine/zod-openapi": "^2.2.8",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^11.1.6",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@node-saml/passport-saml": "^5.1.0",
    "@types/nodemailer": "^7.0.1",
    "@types/pg": "^8.15.6",
    "amqp-connection-manager": "^5.0.0",
    "amqplib": "^0.10.9",
    "axios": "1.11.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "ioredis": "^5.8.2",
    "nest-winston": "^1.10.2",
    "nodemailer": "^7.0.6",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.8.0",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.24",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@faker-js/faker": "^9.9.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/cookie-parser": "^1.4.9",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.18.11",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/passport-saml": "^1.1.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jest": "^28.12.0",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./server",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "tsconfig": "./tsconfig.json"
        }
      ]
    },
    "moduleNameMapper": {
      "^@server/(.*)": "<rootDir>/src/$1",
      "^@shared/(.*)": "<rootDir>/../shared/$1"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.module.(t|j)s",
      "!**/src/configs/**",
      "!**/coverage/**",
      "!**/dist/**",
      "!**/insomnia/**",
      "!**/migrations/**",
      "!**/templates/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testEnvironment": "node",
    "testTimeout": 5000
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not ie < 10"
  ]
}
